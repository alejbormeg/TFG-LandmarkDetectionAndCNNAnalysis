\definecolor{customBlockColor}{RGB}{200,228,250}
\definecolor{customAlertColor}{RGB}{31,112,173}

\DeclareOptionBeamer{verticalbar}[true]{\def\beamer@themeTUD@verticalbar{#1}}
\ExecuteOptionsBeamer{verticalbar=false}

\ProcessOptionsBeamer

%% convert options to tex booleans
\newif\ifverticalbar\csname verticalbar\beamer@themeTUD@verticalbar\endcsname

\usefonttheme{tud}
\usecolortheme{tud}
\useinnertheme[shadow,verticalbar=\beamer@themeTUD@verticalbar]{tud}
\ifverticalbar
	\useoutertheme{tudvertical}
\else
	\useoutertheme{tudhorizontal}
\fi

% remove document icon falling off the list of references
\setbeamertemplate{bibliography item}{}
\mode
<all>

\DeclareOptionBeamer{shadow}[true]{\def\beamer@themerounded@shadow{#1}}
\ExecuteOptionsBeamer{shadow=false}

\DeclareOptionBeamer{verticalbar}[true]{\def\beamer@themeTUD@verticalbar{#1}}
\ExecuteOptionsBeamer{verticalbar=false}

\ProcessOptionsBeamer

%% convert options to tex booleans
\newif\ifverticalbar\csname verticalbar\beamer@themeTUD@verticalbar\endcsname

\mode<presentation>

\defbeamertemplate*{title page}{}{
	\begin{center}
		\ifverticalbar
			\vspace{0.8cm}
		\fi
		{\color{tudCyan}\Large\inserttitle}\\
		\vspace{0.5cm}
		{\small\insertauthor}\\
		\vspace{0.8cm}
		{\scriptsize\insertinstitute}\\
		\vspace{0.5cm}
		{\scriptsize\insertdate}
	\end{center}
}


\addtobeamertemplate{frametitle}{%
\ifverticalbar\hspace*{0.92cm}\else\hspace*{0.03cm}\fi}

\setbeamertemplate{blocks}[rounded][]
\setbeamertemplate{items}[circle]
\setbeamertemplate{sections/subsections in toc}[circle]

\mode
<all>
